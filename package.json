{
  "name": "tonveto",
  "version": "0.5.0",
  "description": "An medical appointment scheduling app with veteranians",
  "author": {
    "name": "tonveto",
    "email": "nassim.hadjarab@gmail.com"},
  "private": true,
  "dependencies": {
    "@emotion/react": "^11.10.4",
    "@emotion/styled": "^11.10.4",
    "@fontsource/roboto": "^4.5.8",
    "@mui/icons-material": "^5.10.3",
    "@mui/lab": "^5.0.0-alpha.100",
    "@mui/material": "^5.10.4",
    "@mui/x-data-grid": "^5.17.4",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "dotenv": "^16.0.2",
    "electron-dl": "^3.3.1",
    "electron-is-dev": "^2.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.3.0",
    "react-scripts": "5.0.1",
    "stripe": "^10.11.0",
    "web-vitals": "^2.1.4"
  },
  "main": "public/main.js",
  "homepage": "./",
  "scripts": {
    "start": "cross-env BROWSER=none react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "dev": "concurrently -k  \"cross-env BROWSER=none npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-build": "npm run build && electron-builder -c.extraMetadata.main=build/main.js",
    "electron": "electron --enable-logging ."
  },
  "build": {
    "extends": null,
    "productName": "Tonveto",
    "mac": {
			"target": "dmg",
      "icon": "build/favicon.icns",
			"category": "public.app-category.utilities"
		},
    "win": {
      "icon": "build/favicon.ico"
    },
    "nsis": {
			"installerIcon": "build/favicon.ico",
			"uninstallerIcon": "build/favicon.ico",
			"uninstallDisplayName": "Tonveto",
			"oneClick": false,
			"allowToChangeInstallationDirectory": true,
			"createDesktopShortcut": "always"
		},
    "appId": "com.nassim.tonveto",
    "files": [
      "dist/**/*",
      "build/**/*",
      "public/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^7.4.0",
    "cross-env": "^7.0.3",
    "electron": "^20.1.3",
    "electron-builder": "^23.3.3",
    "wait-on": "^6.0.1"
  }
}
